{
  "name": "next-runtime-env",
  "version": "0.0.0-development",
  "description": "Next.js Runtime Environment Configuration - Populates your environment at runtime rather than build time.",
  "main": "build/index.js",
  "scripts": {
    "lint": "eslint ./src",
    "lint:fix": "pnpm lint --fix",
    "test": "jest",
    "test:coverage": "pnpm test -- --coverage",
    "test:watch": "pnpm test -- --maxWorkers=50% --watchAll",
    "build": "tsc -p .",
    "build:watch": "pnpm build --watch",
    "audit-ci": "audit-ci",
    "semantic-release": "semantic-release"
  },
  "keywords": [
    "nextjs",
    "runtime",
    "env",
    "runtime env",
    "next-runtime-env"
  ],
  "author": "Expatfile.tax LLC",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/expatfile/next-runtime-env.git"
  },
  "bugs": {
    "url": "https://github.com/expatfile/next-runtime-env/issues"
  },
  "homepage": "https://github.com/expatfile/next-runtime-env#readme",
  "dependencies": {
    "next": "^15",
    "react": "^19"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.1.0",
    "@types/eslint": "^9.6.1",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.6",
    "@types/react": "^19",
    "@types/react-dom": "^19.0.3",
    "@typescript-eslint/eslint-plugin": "^8.20.0",
    "@typescript-eslint/parser": "^8.20.0",
    "audit-ci": "^7.1.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "prettier": "^3.4.2",
    "semantic-release": "^24.2.1",
    "ts-jest": "^29.2.5",
    "typescript": "^5.7.3"
  },
  "peerDependencies": {
    "next": "^14",
    "react": "^18"
  }
}
